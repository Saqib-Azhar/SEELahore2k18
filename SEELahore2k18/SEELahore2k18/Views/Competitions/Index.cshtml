@model IEnumerable<SEELahore2k18.Models.Competition>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", routeValues: null, htmlAttributes: new { @class = "btn btn-primary" })
</p>
<table class="table table-striped" style="text-align:center;border:double" border="1">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CompetitionName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CompetitionDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image2)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image3)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image4)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedAt)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AspNetUser.Email)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <a href="/Competitions/Details/@item.Id">
                @Html.DisplayFor(modelItem => item.CompetitionName)
            </a>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CompetitionDescription)
        </td>
        <td>
            <img src="/UploadedImages/@item.Image1" style="height:30px;width:100px" />
        </td>
        <td>
            <img src="/UploadedImages/@item.Image2" style="height:30px;width:100px" />
        </td>
        <td>
            <img src="/UploadedImages/@item.Image3" style="height:30px;width:100px" />
        </td>
        <td>
            <img src="/UploadedImages/@item.Image4" style="height:30px;width:100px" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreatedAt)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AspNetUser.Email)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }, htmlAttributes: new { @class="btn btn-sm btn-primary"}) <br />
            @*@Html.ActionLink("Details", "Details", new { id=item.Id }) |*@
            @Html.ActionLink("Delete", "Delete", new { id=item.Id }, htmlAttributes: new { @class = "btn btn-sm btn-danger" })
        </td>
    </tr>
}

</table>
